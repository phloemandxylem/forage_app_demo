.row
  -if display_wiki_content?(@wiki)
    .large-8.columns

      %h3= @wiki.title
      %p=markdown(@wiki.body)

    .large-4.columns
      %h3 Creator
      %p= @wiki.user.email
      -if @wiki.private && @wiki.collaborators.any?
        %h5 Collaborators
        %ul
          -display_collaborators(@wiki).each do |user|
            %li= users

    .down-right
      = link_to "Wikis", user_wikis_path(current_user), class: 'button success radius'
      %a.button.dropdown.secondary.radius{"data-dropdown" => "drop1", :href => "#"} Edit Wiki
      %br
      %ul{ id: 'drop1', class: 'f-dropdown' }
        %li= link_to "Edit wiki content", edit_user_wiki_path(current_user, @wiki)
        %li= link_to "Delete wiki", [current_user, @wiki], method: :delete, data: {confirm: 'Are you sure you want to delete this wiki?'}
  -else
    .large-8.columns
      %h5 This is a private wiki.
    .large-4.columns.down-right
      = link_to "Back to Wikis", user_wikis_path(current_user), class: 'button success radius'

.row.button-spacing
  .large-8.columns
    %h5 Manage Collaborators
    -@users.each do |user|
      %div
        = user.email
        - if @wiki.users.include?(user)
          = link_to 'Remove collaborator', collaborator_path(wiki_id: @wiki.id, user_id: user.id) , method: :delete, class: 'button alert'
        - else
          = link_to 'Add collaborator', collaborators_path(wiki_id: @wiki.id, user_id: user.id) , method: :post, class: 'button button-default'
